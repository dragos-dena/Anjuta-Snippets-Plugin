<?xml version="1.0" encoding="UTF-8"?>
<anjuta-snippet-packet>
	<name>Default Snippets</name>
	<description>Default Anjuta Snippet Group.</description>

	<anjuta-snippets>
		<anjuta-snippet language="C" trigger="headercom" >
			<variables>
				<variable name="filename" default="file" is_global="true" />
				<variable name="date_time" default="" is_global="true" />
				<variable name="year" default="2010" is_global="true" />
				<variable name="userfullname" default="User Name" is_global="true" />
				<variable name="email" default="user@domain.org" is_global="true" />
			</variables>
			<snippet-content>
<![CDATA[/***************************************************************************
 *            ${filename}
 *
 *  ${date_time}
 *  Copyright  ${year}  ${userfullname}
 *  <${email}>
 ****************************************************************************/]]>
			</snippet-content>
			<keywords>comment header copyright C email date time</keywords>
		</anjuta-snippet>

		<anjuta-snippet language="C++" trigger="ifelse">
			<variables>
				<variable name="cond" default="/*condition*/" is_global="false" />
				<variable name="if_case" default="/* If case */" is_global="false" />
				<variable name="else_case" default="/* Else case */" is_global="false" />
			</variables>
			<snippet-content>
<![CDATA[if (${cond})
{
	${if_case}
}
else
{
	${else_case}
}]]>
			</snippet-content>
			<keywords>if else condition C++ case switch C</keywords>
		</anjuta-snippet>
	</anjuta-snippets>

</anjuta-snippet-packet>
